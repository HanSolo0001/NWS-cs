@model IEnumerable<NWS_cs.Advertisement>

@{
    ViewBag.Title = "Ad Content";
}

<div class="row bumpPastTopbar">
    <h4>Manage content for Advertisements</h4>

    <p>
        <a href='@Url.Action("Create", "Advertisement")' class="button tiny">
            Create New
        </a>
    </p>

    @{
        foreach (var item in Model)
        {
            <div class="columns large-12 medium-12 small-12 panel">
                <div class="row">
                    <div class="column small-2 left">
                        <div class="row">
                            <a href='@Url.Action("Edit", "Advertisement", new { id=item.id })' 
                               class="button tiny">
                                Edit
                            </a>
                        </div>
                        <div class="row">
                            <a href='@Url.Action("Delete", "Advertisement", new { id=item.id })' 
                               class="button tiny">
                                Delete
                            </a>
                        </div>
                    </div>

                    <div class="column small-10 left">
                        <div class="row">
                            <img class="smallPicture" src="~/@(Html.DisplayFor(modelItem => item.link))" alt="Ad image" />
                        </div>
                        <div class="row">
                            @Html.DisplayFor(modelItem => item.link)
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

