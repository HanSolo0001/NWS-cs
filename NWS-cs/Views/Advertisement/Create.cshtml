@model NWS_cs.Advertisement

@{
    ViewBag.Title = "Ad Create";
}
@using (Html.BeginForm())
{
    <div class="row bumpPastTopbar">
        <h4>Create an Advertisement</h4>

        <div class="form-group">
            @Html.LabelFor(model => model.link)
            <div class="column">
                @Html.EditorFor(model => model.link)
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="button tiny" />
        </div>

        <a href='@Url.Action("Content", "Advertisement")' class="button tiny">
            Back to List
        </a>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
