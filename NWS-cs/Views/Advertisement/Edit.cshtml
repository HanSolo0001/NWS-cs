@model NWS_cs.Advertisement

@{
    ViewBag.Title = "Ad Edit";
}

<div class="row bumpPastTopbar">
    <h4>Edit an Advertisement</h4>

    <div>
        @Html.LabelFor(model => model.link)
        <div class="columns small-12">
            @Html.EditorFor(model => model.link)
        </div>
    </div>

    @using (Html.BeginForm())
    {
        <div class="form-group">
            <input type="submit" value="Save" class="button tiny" />
        </div>

        <a href='@Url.Action("Content", "Advertisement")' class="button tiny">
            Back to List
        </a>
    }

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
