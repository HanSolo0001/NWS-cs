@model NWS_cs.Service

@{
    ViewBag.Title = "Service Delete";
}

@using (Html.BeginForm())
{
    <div class="row bumpPastTopbar">
        <h4>Delete a Service</h4>

        <h5>Are you sure you want to delete this?</h5>

        <div class="columns small-12 panel">
            <div class="row">
                <div class="column small-10 small-offset-2 left">
                    <div>
                        @Html.DisplayFor(model => model.text)
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Delete" class="button tiny" />
        </div>

        <a href='@Url.Action("Content", "Service")' class="button tiny">
            Back to List
        </a>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
