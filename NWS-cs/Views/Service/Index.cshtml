@model IEnumerable<NWS_cs.Service>

@{
    ViewBag.Title = "Services";
}

<div class="row bumpPastTopbar">
    <h4>Deer Park Neighborhood Association Officers</h4>

    <div class="row" data-equalizer>
        @{
            int index = 0;
            string[] colors = { "pastelA", "pastelB", "pastelC" };
            foreach (var item in Model)
            {
                <div class="column small-12 panel left 
                     @Html.Raw(colors[index % colors.Length])"
                     data-equalizer-watch>
                    <div class="row">
                        <div class="column small-12 left">
                            <p>@Html.DisplayFor(modelItem => item.text)</p>
                        </div>
                    </div>
                </div>
                index++;
            }
        }
    </div>
</div>
