@model IEnumerable<NWS_cs.Video>

@{
    ViewBag.Title = "Video Content";
}

<div class="row bumpPastTopbar">
    <h4>Manage Officer Content</h4>

    <p>
        <a href='@Url.Action("Create", "Video")' class="button tiny">
            Create New
        </a>
    </p>

    @{
        foreach (var item in Model)
        {
            <div class="columns small-12 panel">
                <div class="row">
                    <div class="column small-2 left">
                        <a href='@Url.Action("Edit", "Video", new { id = item.id })'>
                            Edit
                        </a>|
                        <a href='@Url.Action("Delete", "Video", new { id = item.id })'>
                            Delete
                        </a>
                    </div>

                    <div class="column small-10 left">
                        <div>
                            @Html.DisplayFor(modelItem => item.site)
                        </div>
                        <div>
                            @Html.DisplayFor(modelItem => item.type)
                        </div>
                        <div>
                            @Html.DisplayFor(modelItem => item.title)
                        </div>
                        <div>
                            @Html.DisplayFor(modelItem => item.description)
                        </div>
                        <div>
                            @Html.DisplayFor(modelItem => item.link)
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
