@model NWS_cs.Video

@{
    ViewBag.Title = "Video Delete";
}

@using (Html.BeginForm())
{
    <div class="row bumpPastTopbar">
        <h4>Delete a Video</h4>

        <h5>Are you sure you want to delete this?</h5>

        <div class="column small-12 panel">
            <div class="row">
                <div class="column small-10 small-offset-2 left">
                    <div>
                        @Html.DisplayFor(model => model.site)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.type)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.title)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.description)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.link)
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Delete" class="button tiny" />
        </div>

        <a href='@Url.Action("Content", "Video")' class="button tiny">
            Back to List
        </a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
