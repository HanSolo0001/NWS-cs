@model NWS_cs.Video

@{
    ViewBag.Title = "Video Edit";
}

@using (Html.BeginForm())
{
    <div class="row bumpPastTopbar">
        <h4>Edit a Video</h4>

        <div>
            @Html.LabelFor(model => model.site)
            <div class="columns small-12">
                @Html.EditorFor(model => model.site)
            </div>

            @Html.LabelFor(model => model.type)
            <div class="columns small-12">
                @Html.EditorFor(model => model.type)
            </div>

            @Html.LabelFor(model => model.title)
            <div class="columns small-12">
                @Html.EditorFor(model => model.title)
            </div>

            @Html.LabelFor(model => model.description)
            <div class="columns small-12">
                @Html.EditorFor(model => model.description)
            </div>

            @Html.LabelFor(model => model.link)
            <div class="columns small-12">
                @Html.EditorFor(model => model.link)
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="button tiny" />
        </div>

        <a href='@Url.Action("Content", "Video")' class="button tiny">
            Back to List
        </a>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
