@model NWS_cs.Video

@{
    ViewBag.Title = "Video Edit";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="row bumpPastTopbar">
        <h4>Edit a Video</h4>

        <div>
            @Html.LabelFor(model => model.site)
            <div class="tab">
                <div>
                    No Video: @Html.RadioButtonFor(model => model.site, "no_video")
                </div>
                <div>
                    On-site: @Html.RadioButtonFor(model => model.site, "onsite")
                </div>
                <div>
                    Youtube: @Html.RadioButtonFor(model => model.site, "youtube")
                </div>
                @Html.ValidationMessageFor(model => model.site)
            </div>

            @Html.LabelFor(model => model.type)
            <div class="column small-12">
                @Html.EditorFor(model => model.type)
            </div>

            @Html.LabelFor(model => model.title)
            <div class="column small-12">
                @Html.EditorFor(model => model.title)
                @Html.ValidationMessageFor(model => model.title)
            </div>

            @Html.LabelFor(model => model.description)
            <div class="column small-12">
                @Html.EditorFor(model => model.description)
            </div>

            @Html.LabelFor(model => model.link)
            <div class="column small-12">
                @Html.EditorFor(model => model.link)
                @Html.ValidationMessageFor(model => model.link)
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="button tiny" />
        </div>

        <a href='@Url.Action("Content", "Video")' class="button tiny">
            Back to List
        </a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
